{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "allowJs": false,
    "checkJs": false,
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "sourceMap": false,
    "strict": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "app/**/*.ts",
    "index.ts",
    "scripts/**/*.ts",
    "tests/**/*.ts"
  ]
}

